<% extend("../mainadmin.ejs") %>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">TẤT CẢ KHÁCH HÀNH</h3>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>STT</th>
                    <th>HỌ VÀ TÊN</th>
                    <th>SỐ ĐIỆN THOẠI</th>
                    <th>ĐỊA CHỈ</th>
                    <th>XEM THÔNG TIN</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(alldatauser.length!=0){ var i=1; alldatauser.forEach(function(data){ %>
                    <tr>
                      <td>
                        <%=i%>
                      </td>
                      <td>
                        <%=data.name %>
                      </td>

                      <td>
                        <%=data.phone %>
                      </td>
                      <td>
                        <%=data.address %>
                      </td>
            
                      <td>
                        <a class="btn btn-info btn-sm"
                        href="/admin/edituser?id=<%=data.id%>">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                        <a class="btn btn-danger btn-sm delete-vbden"
                        data-deletedata="<%= data.id %>" href="#">
                        <i class="fas fa-trash">
                        </i>
                        Xóa Bỏ
                    </a>
                      </td>


                    </tr>
                    <% i++; }) %>
                      <% } else{ %>
                        <tr>
                          <td colspan="8">No Data Found</td>
                        </tr>
                        <% } %>

                </tbody>
                </tbody>

              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>